@model LoginViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
</head>
<body 
    x-data="{ page: 'comingSoon', 'loaded': true, 'darkMode': true, 'stickyMenu': false, 'sidebarToggle': false, 'scrollTop': false }"
    x-init="
         darkMode = JSON.parse(localStorage.getItem('darkMode'));
         $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
    :class="{'dark bg-gray-900': darkMode === true}">
   <!-- ===== Page Wrapper Start ===== -->
     <div class="relative p-6 bg-white z-1 dark:bg-gray-900 sm:p-0">
        <div class="flex flex-col lg:flex-row">
        <div class="relative flex flex-col justify-center w-full min-h-screen dark:bg-gray-900 sm:p-0 lg:flex-row">
            <!-- Form Section -->
            <div class="flex flex-col flex-1 w-full lg:w-1/2">
                <div class="flex flex-col justify-center flex-1 w-full max-w-md mx-auto">
                    <div>
                        <div class="mb-5 sm:mb-8">
                            <h1 class="mb-2 font-semibold text-gray-800 text-2xl dark:text-gray-400 sm:text-3xl">Sign In</h1>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Enter your email and password to sign in!</p>
                        </div>
                        <div>
                            @{
                                if (Model.ExternalLogins != null && Model.ExternalLogins.Count > 0)
                                {
                                    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 sm:gap-5 mb-5">
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <form id="external-account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                                <button type="submit" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" class="inline-flex items-center justify-center gap-3 py-3 text-sm font-normal text-gray-700 transition-colors bg-gray-100 rounded-lg px-7 hover:bg-gray-200 hover:text-gray-800 dark:bg-surface-light dark:text-white/90 dark:hover:bg-surface-subtle w-full">
                                                    @if (provider.Name.ToLower() == "google")
                                                    {
                                                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18.7511 10.1944C18.7511 9.47495 18.6915 8.94995 18.5626 8.40552H10.1797V11.6527H15.1003C15.0011 12.4597 14.4654 13.675 13.2749 14.4916L13.2582 14.6003L15.9087 16.6126L16.0924 16.6305C17.7788 15.1041 18.7511 12.8583 18.7511 10.1944Z" fill="#4285F4"/><path d="M10.1788 18.75C12.5895 18.75 14.6133 17.9722 16.0915 16.6305L13.274 14.4916C12.5201 15.0068 11.5081 15.3666 10.1788 15.3666C7.81773 15.3666 5.81379 13.8402 5.09944 11.7305L4.99473 11.7392L2.23868 13.8295L2.20264 13.9277C3.67087 16.786 6.68674 18.75 10.1788 18.75Z" fill="#34A853"/><path d="M5.10014 11.7305C4.91165 11.186 4.80257 10.6027 4.80257 9.99992C4.80257 9.3971 4.91165 8.81379 5.09022 8.26935L5.08523 8.1534L2.29464 6.02954L2.20333 6.0721C1.5982 7.25823 1.25098 8.5902 1.25098 9.99992C1.25098 11.4096 1.5982 12.7415 2.20333 13.9277L5.10014 11.7305Z" fill="#FBBC05"/><path d="M10.1789 4.63331C11.8554 4.63331 12.9864 5.34303 13.6312 5.93612L16.1511 3.525C14.6035 2.11528 12.5895 1.25 10.1789 1.25C6.68676 1.25 3.67088 3.21387 2.20264 6.07218L5.08953 8.26943C5.81381 6.15972 7.81776 4.63331 10.1789 4.63331Z" fill="#EB4335"/></svg>
                                                    }
                                                    else if (provider.Name.ToLower().Contains("twitter") || provider.Name.ToLower().Contains("x"))
                                                    {
                                                        <svg width="21" class="fill-current" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M15.6705 1.875H18.4272L12.4047 8.75833L19.4897 18.125H13.9422L9.59717 12.4442L4.62554 18.125H1.86721L8.30887 10.7625L1.51221 1.875H7.20054L11.128 7.0675L15.6705 1.875ZM14.703 16.475H16.2305L6.37054 3.43833H4.73137L14.703 16.475Z"/></svg>
                                                    }
                                                    Sign in with @provider.DisplayName
                                                </button>
                                            </form>
                                        }
                                    </div>
                                    <div class="relative py-3 sm:py-5">
                                        <div class="absolute inset-0 flex items-center">
                                            <div class="w-full border-t border-gray-200 dark:border-gray-800"></div>
                                        </div>
                                        <div class="relative flex justify-center text-sm">
                                            <span class="p-2 text-gray-400 bg-white dark:bg-gray-900 sm:px-5 sm:py-2">Or</span>
                                        </div>
                                    </div>
                                }
                            }
                            <form id="account" method="post" asp-controller="Account" asp-action="Login">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-error text-sm mb-4" role="alert"></div>
                                <div class="space-y-5">
                                    <div class="mb-4">
                                        <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">Login Type</label>
                                        <label asp-for="UseLocalLogin" class="flex items-center text-sm font-normal text-gray-700 cursor-pointer select-none dark:text-gray-400">
                                            <input asp-for="UseLocalLogin" type="checkbox" class="mr-2">
                                            Use Local Login (instead of AD)
                                        </label>
                                    </div>
                                    <div>
                                        <label asp-for="Email" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">Username / Email<span class="text-error">*</span></label>
                                        <input asp-for="Email" type="text" autocomplete="username" aria-required="true" placeholder="domain\username or email@domain.com" class="dark:bg-gray-900 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-light focus:outline-none focus:ring-3 focus:ring-brand/10 dark:border-gray-700 dark:text-white/90 dark:placeholder:text-white/30 dark:focus:border-brand" />
                                        <span asp-validation-for="Email" class="text-error text-sm"></span>
                                    </div>
                                    <div>
                                        <label asp-for="Password" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">Password<span class="text-error">*</span></label>
                                        <input asp-for="Password" type="password" autocomplete="current-password" aria-required="true" placeholder="Enter your password" class="dark:bg-gray-900 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-light focus:outline-none focus:ring-3 focus:ring-brand/10 dark:border-gray-700 dark:text-white/90 dark:placeholder:text-white/30 dark:focus:border-brand" />
                                        <span asp-validation-for="Password" class="text-error text-sm"></span>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <label asp-for="RememberMe" class="flex items-center text-sm font-normal text-gray-700 cursor-pointer select-none dark:text-gray-400">
                                            <input asp-for="RememberMe" type="checkbox" class="mr-2">
                                            Remember me?
                                        </label>
                                        <a id="forgot-password" asp-action="ForgotPassword" class="text-sm text-brand hover:text-brand-hover dark:text-brand-light">Forgot password?</a>
                                    </div>
                                    <div>
                                        <button id="login-submit" type="submit" class="flex items-center justify-center w-full px-4 py-3 text-sm font-medium text-white transition rounded-lg bg-brand shadow-theme-xs hover:bg-brand-hover">
                                            Sign In
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div class="mt-5">
                                @if (Model.UseLocalLogin)
                                {
                                    <p class="text-sm font-normal text-center text-gray-700 dark:text-gray-400 sm:text-start">
                                        Don't have an account?
                                        <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-brand hover:text-brand-hover dark:text-brand-light">Sign Up</a>
                                    </p>
                                    <p class="text-sm font-normal text-center text-gray-700 dark:text-gray-400 sm:text-start mt-2">
                                        <a id="resend-confirmation" asp-action="ResendEmailConfirmation" class="text-brand hover:text-brand-hover dark:text-brand-light">Resend email confirmation</a>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Section (Logo & Description) -->
            <div class="relative items-center hidden w-full h-full bg-gradient-brand dark:bg-gray-900 lg:grid lg:w-1/2"> 
                <div class="flex items-center justify-center w-full h-full relative">
                    <div class="absolute right-0 top-0 -z-1 w-full max-w-[250px] xl:max-w-[450px]">
                        <img src="~/img/shape/grid-01.svg" alt="grid" />
                    </div>
                    <div class="absolute bottom-0 left-0 -z-1 w-full max-w-[250px] rotate-180 xl:max-w-[450px]">
                        <img src="~/img/shape/grid-01.svg" alt="grid" />
                    </div>
                    <div class="flex flex-col items-center max-w-xs z-10">
                        <a href="/" class="block mb-4">
                            <img src="~/img/logo/auth-logo.png" alt="Logo"  />
                        </a>
                        @* <h1 class="mb-2 font-semibold text-red-500 text-2xl dark:text-white/90 sm:text-3xl">e-Form HR</h1> *@
                        <p class="text-center text-gray-400 dark:text-white/60 text-base">
                            -- add your tagline here --
                        </p>
                    </div>
                </div>
            </div>

             <!-- Toggler -->
            <div class="fixed z-50 hidden bottom-6 right-6 sm:block">
            <button
                class="inline-flex items-center justify-center text-white transition-colors rounded-full size-14 bg-brand hover:bg-brand-hover"
                @@click.prevent="darkMode = !darkMode"
            >
                <svg
                class="hidden fill-current dark:block"
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                >
                <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M9.99998 1.5415C10.4142 1.5415 10.75 1.87729 10.75 2.2915V3.5415C10.75 3.95572 10.4142 4.2915 9.99998 4.2915C9.58577 4.2915 9.24998 3.95572 9.24998 3.5415V2.2915C9.24998 1.87729 9.58577 1.5415 9.99998 1.5415ZM10.0009 6.79327C8.22978 6.79327 6.79402 8.22904 6.79402 10.0001C6.79402 11.7712 8.22978 13.207 10.0009 13.207C11.772 13.207 13.2078 11.7712 13.2078 10.0001C13.2078 8.22904 11.772 6.79327 10.0009 6.79327ZM5.29402 10.0001C5.29402 7.40061 7.40135 5.29327 10.0009 5.29327C12.6004 5.29327 14.7078 7.40061 14.7078 10.0001C14.7078 12.5997 12.6004 14.707 10.0009 14.707C7.40135 14.707 5.29402 12.5997 5.29402 10.0001ZM15.9813 5.08035C16.2742 4.78746 16.2742 4.31258 15.9813 4.01969C15.6884 3.7268 15.2135 3.7268 14.9207 4.01969L14.0368 4.90357C13.7439 5.19647 13.7439 5.67134 14.0368 5.96423C14.3297 6.25713 14.8045 6.25713 15.0974 5.96423L15.9813 5.08035ZM18.4577 10.0001C18.4577 10.4143 18.1219 10.7501 17.7077 10.7501H16.4577C16.0435 10.7501 15.7077 10.4143 15.7077 10.0001C15.7077 9.58592 16.0435 9.25013 16.4577 9.25013H17.7077C18.1219 9.25013 18.4577 9.58592 18.4577 10.0001ZM14.9207 15.9806C15.2135 16.2735 15.6884 16.2735 15.9813 15.9806C16.2742 15.6877 16.2742 15.2128 15.9813 14.9199L15.0974 14.036C14.8045 13.7431 14.3297 13.7431 14.0368 14.036C13.7439 14.3289 13.7439 14.8038 14.0368 15.0967L14.9207 15.9806ZM9.99998 15.7088C10.4142 15.7088 10.75 16.0445 10.75 16.4588V17.7088C10.75 18.123 10.4142 18.4588 9.99998 18.4588C9.58577 18.4588 9.24998 18.123 9.24998 17.7088V16.4588C9.24998 16.0445 9.58577 15.7088 9.99998 15.7088ZM5.96356 15.0972C6.25646 14.8043 6.25646 14.3295 5.96356 14.0366C5.67067 13.7437 5.1958 13.7437 4.9029 14.0366L4.01902 14.9204C3.72613 15.2133 3.72613 15.6882 4.01902 15.9811C4.31191 16.274 4.78679 16.274 5.07968 15.9811L5.96356 15.0972ZM4.29224 10.0001C4.29224 10.4143 3.95645 10.7501 3.54224 10.7501H2.29224C1.87802 10.7501 1.54224 10.4143 1.54224 10.0001C1.54224 9.58592 1.87802 9.25013 2.29224 9.25013H3.54224C3.95645 9.25013 4.29224 9.58592 4.29224 10.0001ZM4.9029 5.9637C5.1958 6.25659 5.67067 6.25659 5.96356 5.9637C6.25646 5.6708 6.25646 5.19593 5.96356 4.90303L5.07968 4.01915C4.78679 3.72626 4.31191 3.72626 4.01902 4.01915C3.72613 4.31204 3.72613 4.78692 4.01902 5.07981L4.9029 5.9637Z"
                    fill=""
                />
                </svg>
                <svg
                class="fill-current dark:hidden"
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                >
                <path
                    d="M17.4547 11.97L18.1799 12.1611C18.265 11.8383 18.1265 11.4982 17.8401 11.3266C17.5538 11.1551 17.1885 11.1934 16.944 11.4207L17.4547 11.97ZM8.0306 2.5459L8.57989 3.05657C8.80718 2.81209 8.84554 2.44682 8.67398 2.16046C8.50243 1.8741 8.16227 1.73559 7.83948 1.82066L8.0306 2.5459ZM12.9154 13.0035C9.64678 13.0035 6.99707 10.3538 6.99707 7.08524H5.49707C5.49707 11.1823 8.81835 14.5035 12.9154 14.5035V13.0035ZM16.944 11.4207C15.8869 12.4035 14.4721 13.0035 12.9154 13.0035V14.5035C14.8657 14.5035 16.6418 13.7499 17.9654 12.5193L16.944 11.4207ZM16.7295 11.7789C15.9437 14.7607 13.2277 16.9586 10.0003 16.9586V18.4586C13.9257 18.4586 17.2249 15.7853 18.1799 12.1611L16.7295 11.7789ZM10.0003 16.9586C6.15734 16.9586 3.04199 13.8433 3.04199 10.0003H1.54199C1.54199 14.6717 5.32892 18.4586 10.0003 18.4586V16.9586ZM3.04199 10.0003C3.04199 6.77289 5.23988 4.05695 8.22173 3.27114L7.83948 1.82066C4.21532 2.77574 1.54199 6.07486 1.54199 10.0003H3.04199ZM6.99707 7.08524C6.99707 5.52854 7.5971 4.11366 8.57989 3.05657L7.48132 2.03522C6.25073 3.35885 5.49707 5.13487 5.49707 7.08524H6.99707Z"
                    fill=""
                />
                </svg>
            </button>
            </div>
          </div>
        </div>
    </div>
    <!-- jQuery must be loaded before validation scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="module" src="~/js/bundle.js" defer></script>
    
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
</body>  <!-- ===== Page Wrapper End ===== -->
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
    ViewData["Module"] = "Dashboard";
}

<div class="p-4 mx-auto max-w-[1320px] md:p-6 lg:p-8">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 mb-6">
        <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-default dark:border-gray-800 dark:bg-surface-light">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-700 font-semibold dark:text-gray-400">Total Users</h3>
                <span class="bg-blue-100 text-blue-800 p-2 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </span>
            </div>
            <p class="text-3xl font-bold text-gray-800 dark:text-white">2,543</p>
            <p class="text-green-500 text-sm mt-2">↑ 12% from last month</p>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-default dark:border-gray-800 dark:bg-surface-light">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-700 font-semibold dark:text-gray-400">Revenue</h3>
                <span class="bg-green-100 text-green-800 p-2 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </span>
            </div>
            <p class="text-3xl font-bold text-gray-800 dark:text-white">$48,250</p>
            <p class="text-green-500 text-sm mt-2">↑ 8% from last month</p>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-default dark:border-gray-800 dark:bg-surface-light">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-700 font-semibold dark:text-gray-400">Active Projects</h3>
                <span class="bg-purple-100 text-purple-800 p-2 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                </span>
            </div>
            <p class="text-3xl font-bold text-gray-800 dark:text-white">95</p>
            <p class="text-yellow-500 text-sm mt-2">→ Same as last month</p>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-default dark:border-gray-800 dark:bg-surface-light">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-700 font-semibold dark:text-gray-400">Tasks Complete</h3>
                <span class="bg-red-100 text-red-800 p-2 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                </span>
            </div>
            <p class="text-3xl font-bold text-gray-800 dark:text-white">842</p>
            <p class="text-green-500 text-sm mt-2">↑ 15% from last month</p>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Recent Activity -->
        <div class="lg:col-span-2 rounded-lg border-gray-200 bg-white p-5 shadow-default dark:border-gray-800 dark:bg-surface-light">
            <div class="p-6">
                <h2 class="text-xl text-gray-700 font-semibold dark:text-gray-400 mb-4">Recent Activity</h2>
                <div class="space-y-4">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-900">New project created</p>
                            <p class="text-sm text-gray-500">John Doe created a new project "E-commerce Dashboard"</p>
                            <p class="text-xs text-gray-400 mt-1">2 hours ago</p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-900">Task completed</p>
                            <p class="text-sm text-gray-500">Jane Smith completed "User Authentication Module"</p>
                            <p class="text-xs text-gray-400 mt-1">4 hours ago</p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 rounded-full bg-yellow-500 flex items-center justify-center text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-900">New comment</p>
                            <p class="text-sm text-gray-500">Mike Johnson commented on "API Integration"</p>
                            <p class="text-xs text-gray-400 mt-1">5 hours ago</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg border-gray-200 bg-white p-5 shadow-default dark:border-gray-800 dark:bg-surface-light">
            <div class="p-6">
                <h2 class="text-xl text-gray-700 font-semibold dark:text-gray-400 mb-4">Quick Actions</h2>
                <div class="space-y-4">
                    <button class="w-full flex items-center justify-between p-4 bg-gray-50 rounded-lg dark:border-gray-800 dark:bg-surface-light dark:text-gray-400">
                        <div class="flex items-center">
                            <span class="bg-blue-100 p-2 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                </svg>
                            </span>
                            <span class="ml-3 font-medium">New Project</span>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>

                    <button class="w-full flex items-center justify-between p-4 bg-gray-50 rounded-lg dark:border-gray-800 dark:bg-surface-light dark:text-gray-400">
                        <div class="flex items-center">
                            <span class="bg-green-100 p-2 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </span>
                            <span class="ml-3 font-medium">Create Task</span>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>

                    <button class="w-full flex items-center justify-between p-4 bg-gray-50 rounded-lg dark:border-gray-800 dark:bg-surface-light dark:text-gray-400">
                        <div class="flex items-center">
                            <span class="bg-purple-100 p-2 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </span>
                            <span class="ml-3 font-medium">Schedule Meeting</span>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
